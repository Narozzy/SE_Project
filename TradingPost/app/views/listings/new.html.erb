<h1>New Listing</h1>

<%= form_with scope: :listing, url: listings_path, local: true do |form| %>
    <p>
        <%= form.label :title %><br>
        <%= form.text_field :title %>
    </p>

    <p>
        <%= form.label :isbn %><br>
        <%= form.text_field :isbn %>
    </p>

    <p>
        <%= form.label :product_type %><br>
        <%= form.select :product_type, ['book', 'required material', 'other'] %>
    </p>

    <p>
        <%= form.submit %>
    </p>
<% end %>

<%= link_to 'Back', listings_path %>
